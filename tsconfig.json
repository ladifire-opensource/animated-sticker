{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom",
      "es2016.array.include",
      "es2017.object",
      "es2017.intl"
    ],
    "skipLibCheck": false,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": [
    "**/node_modules"
  ]
}
